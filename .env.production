# Flask 配置
FLASK_ENV=production
FLASK_APP=app.py
FLASK_DEBUG=False

# 代理配置
PROXY_DEFAULT_PORT=8888
PROXY_MAX_CONNECTIONS=1000
PROXY_TIMEOUT=30

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/proxy.log

# WebSocket 配置
SOCKETIO_ASYNC_MODE=eventlet

# 安全配置 - 生产环境请更改此密钥
SECRET_KEY=change-this-secret-key-in-production

# 数据库配置 (可选)
# DATABASE_URL=postgresql://user:password@db:5432/proxy

# Redis 配置 (可选)
# REDIS_URL=redis://redis:6379/0
